{
  "name": "scrolling-tabs",
  "homepage": "https://mehrizi.github.io/scrolling-tabs",
  "private": false,
  "version": "0.7.1",
  "type": "module",
  "keywords": [
    "react",
    "components",
    "tab",
    "scroll",
    "scrolling"
  ],
  "author": "Mahdi Mehrizi Sani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mehrizi/scrolling-tabs"
  },
  "bugs": {
    "url": "https://github.com/mehrizi/scrolling-tabs/issues"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/scrolling-tabs.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/scrolling-tabs.umd.js"
      }
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/scrolling-tabs.umd.js",
  "module": "./dist/scrolling-tabs.es.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:dev": "vitest watch",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:deploy": "echo > ./storybook-static/.nojekyll && gh-pages -d ./storybook-static -t true"
  },
  "peerDependencies": {
    "react": ">=16.3.0",
    "react-dom": ">=16.3.0",
    "react-draggable": ">=4.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.1.11",
    "@storybook/addon-interactions": "^8.1.11",
    "@storybook/addon-links": "^8.1.11",
    "@storybook/addon-onboarding": "^8.1.11",
    "@storybook/blocks": "^8.1.11",
    "@storybook/manager-api": "^8.1.11",
    "@storybook/react": "^8.1.11",
    "@storybook/react-vite": "^8.1.11",
    "@storybook/test": "^8.1.11",
    "@storybook/theming": "^8.1.11",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.15",
    "gh-pages": "^6.1.1",
    "lorem-ipsum": "^2.0.8",
    "react-syntax-highlighter": "^15.5.0",
    "storybook": "^8.1.11",
    "typescript": "^5.0.2",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.6.3",
    "yarn": "^1.22.19"
  }
}
